@model IEnumerable<Hospital_Project.Models.Appointment>

@{
    ViewData["Title"] = "قائمة المواعيد";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>📋 قائمة المواعيد</h2>
        <a asp-action="Create" class="btn btn-success">➕ إضافة موعد</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>المريض</th>
                        <th>الدكتور</th>
                        <th>التاريخ</th>
                        <th>الوقت</th>
                        <th>الحالة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Patient?.PatientName</td>
                            <td>@item.Doctor?.DoctorName</td>
                            <td>@item.AppointmentDate.ToString("yyyy-MM-dd")</td>
                            <td>@item.Time</td>
                            <td>@(item.AppointmentStatus ?? "غير محددة")</td>
                           <td>
                             @if (item.AppointmentStatus != "دفع مكتمل")
                             {
                                 <a asp-controller="Payments" asp-action="Create" asp-route-appointmentId="@item.Id" class="btn btn-sm btn-success">💰 دفع الآن</a>
                             }
                             else
                             {
                                 <span class="badge bg-success">مدفوع</span>
                             }
                             <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning ms-1">✏️</a>
                             <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">🗑️</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            💤 مفيش مواعيد لحد دلوقتي. <a asp-action="Create">ابدأ بإضافة أول موعد!</a>
        </div>
    }
</div>