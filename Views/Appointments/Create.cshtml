@model Hospital_Project.Models.Appointment

@{
    ViewData["Title"] = "إضافة موعد جديد";
}

<div class="container mt-4">
    <h2>➕ إضافة موعد جديد</h2>

    <form asp-action="Create" class="row g-3 mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="col-md-6">
            <label asp-for="PatientId" class="form-label">اختر المريض</label>
            <select asp-for="PatientId" class="form-select" required>
                <option value="">-- اختر مريض --</option>
                @foreach (var patient in ViewBag.Patients as List<Patient>)
                {
                    <option value="@patient.Id">@patient.PatientName</option>
                }
            </select>
            <span asp-validation-for="PatientId" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DoctorId" class="form-label">اختر الدكتور</label>
            <select asp-for="DoctorId" class="form-select" required>
                <option value="">-- اختر دكتور --</option>
                @foreach (var doctor in ViewBag.Doctors as List<Doctor>)
                {
                    <option value="@doctor.Id">@doctor.DoctorName - @doctor.Specialization</option>
                }
            </select>
            <span asp-validation-for="DoctorId" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="AppointmentDate" class="form-label">تاريخ الموعد</label>
            <input asp-for="AppointmentDate" class="form-control" type="date" required />
            <span asp-validation-for="AppointmentDate" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Time" class="form-label">وقت الموعد</label>
            <input asp-for="Time" class="form-control" type="time" required />
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="AppointmentStatus" class="form-label">حالة الموعد</label>
            <input asp-for="AppointmentStatus" class="form-control" placeholder="مثال: مؤكّد، ملغى، مكتمل" />
            <span asp-validation-for="AppointmentStatus" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">💾 حفظ الموعد</button>
            <a asp-action="Index" class="btn btn-secondary">⬅️ الرجوع للقائمة</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}