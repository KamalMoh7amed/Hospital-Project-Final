<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Hospital_System</title>
    <script type="importmap"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Hospital_Project_Final.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom">
    <div class="container">
      
        <a class="navbar-brand fw-bold text-dark" href="@Url.Action("Index", "Dashboard")">
            Hospital_System
        </a>

       
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
            <span class="navbar-toggler-icon"></span>
        </button>

    
        <div class="collapse navbar-collapse" id="mainNav">
            
            <ul class="navbar-nav me-auto mb-2 mb-lg-0">
               <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index", "Dashboard")">dashboard</a>
              </li>
              <li class="nav-item">
                 <a class="nav-link" href="@Url.Action("Index", "Appointments")">📅 appointments</a>
              </li>
                   <li class="nav-item">
              <a class="nav-link" href="@Url.Action("Index", "Payments")">💰 payments</a>
                </li>
            </ul>
        </div>
    </div>
</nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="border-top footer text-muted mt-5 py-3 bg-light">
    <div class="container text-center">
        &copy; 2025 - Hospital_Project_Final - 
        <a asp-controller="Home" asp-action="Privacy">Privacy</a> - 
            <a asp-controller="Home" asp-action="Developers">development team</a>
    </div>
</footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>

