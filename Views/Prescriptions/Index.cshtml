@model IEnumerable<Hospital_Project.Models.Prescription>

@{
    ViewData["Title"] = "الوصفات الطبية";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>💊 الوصفات الطبية</h2>
        <a asp-action="Create" class="btn btn-success">➕ إضافة وصفة</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-bordered table-striped">
                <thead class="table-dark">
                    <tr>
                        <th>السجل الطبي</th>
                        <th>الدواء</th>
                        <th>الجرعة</th>
                        <th>المدة</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var p in Model)
                    {
                        <tr>
                            <td>
                                @p.MedicalRecord?.Patient?.PatientName<br />
                                د. @p.MedicalRecord?.Doctor?.DoctorName
                            </td>
                            <td>@p.MedicationName</td>
                            <td>@p.Dosage</td>
                            <td>@p.StartDate.ToString("yyyy-MM-dd") → @p.EndDate.ToString("yyyy-MM-dd")</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@p.Id" class="btn btn-sm btn-warning">✏️</a>
                                <a asp-action="Delete" asp-route-id="@p.Id" class="btn btn-sm btn-danger ms-1">🗑️</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            💤 مفيش وصفات. <a asp-action="Create">أضف أول وصفة!</a>
        </div>
    }
</div>