@model Hospital_Project.Models.Payments

@{
    ViewData["Title"] = "تعديل دفعة";
}

<div class="container mt-4">
    <h2>✏️ تعديل الدفعة</h2>

    <form asp-action="Edit" class="row g-3 mt-3">
        <input type="hidden" asp-for="Id" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="col-12">
            <label class="form-label">الموعد (لا يمكن تغييره بعد الحفظ)</label>
            <div class="form-control" readonly>
                @Model.Appointment?.Patient?.PatientName | د. @Model.Appointment?.Doctor?.DoctorName | @Model.Appointment?.AppointmentDate.ToString("yyyy-MM-dd")
            </div>
            <input type="hidden" asp-for="AppointmentId" />
        </div>

        <div class="col-md-4">
            <label asp-for="AmountPaid" class="form-label">المبلغ المدفوع *</label>
            <input asp-for="AmountPaid" class="form-control" type="number" step="0.01" min="0" placeholder="مثال: 250.00" required />
            <span asp-validation-for="AmountPaid" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="PaymentDate" class="form-label">تاريخ الدفع *</label>
            <input asp-for="PaymentDate" class="form-control" type="date" required />
            <span asp-validation-for="PaymentDate" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="PaymentMethod" class="form-label">طريقة الدفع</label>
            <input asp-for="PaymentMethod" class="form-control" placeholder="نقدًا، فيزا، تحويل..." />
            <span asp-validation-for="PaymentMethod" class="text-danger"></span>
        </div>

        <div class="col-12">
            <label asp-for="AdditionalNote" class="form-label">ملاحظات إضافية</label>
            <textarea asp-for="AdditionalNote" class="form-control" rows="2" placeholder="أي ملاحظات توضيحية"></textarea>
            <span asp-validation-for="AdditionalNote" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">💾 حفظ التعديلات</button>
            <a asp-action="Index" class="btn btn-secondary">⬅️ الرجوع للقائمة</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}