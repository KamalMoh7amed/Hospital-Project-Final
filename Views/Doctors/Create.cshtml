@model Hospital_Project.Models.Doctor

@{
    ViewData["Title"] = "إضافة دكتور جديد";
}

<div class="container mt-4">
    <h2>➕ إضافة دكتور جديد</h2>

    <form asp-action="Create" class="row g-3 mt-3">
        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="col-md-6">
            <label asp-for="DoctorName" class="form-label">الاسم الكامل</label>
            <input asp-for="DoctorName" class="form-control" placeholder="أدخل الاسم" required />
            <span asp-validation-for="DoctorName" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Specialization" class="form-label">التخصص</label>
            <input asp-for="Specialization" class="form-control" placeholder="مثل: قلب، عظام، أطفال..." required />
            <span asp-validation-for="Specialization" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="DateOfBirth" class="form-label">تاريخ الميلاد</label>
            <input asp-for="DateOfBirth" class="form-control" type="date" required />
            <span asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Gender" class="form-label">الجنس</label>
            <select asp-for="Gender" class="form-select" required>
                <option value="">-- اختر --</option>
                <option value="M">ذكر</option>
                <option value="F">أنثى</option>
            </select>
            <span asp-validation-for="Gender" class="text-danger"></span>
        </div>

        <div class="col-md-4">
            <label asp-for="Phone" class="form-label">رقم الهاتف</label>
            <input asp-for="Phone" class="form-control" placeholder="مثال: 01012345678" />
            <span asp-validation-for="Phone" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Email" class="form-label">البريد الإلكتروني</label>
            <input asp-for="Email" class="form-control" type="email" placeholder="example@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Address" class="form-label">العنوان</label>
            <input asp-for="Address" class="form-control" placeholder="العنوان الكامل" />
            <span asp-validation-for="Address" class="text-danger"></span>
        </div>

        <div class="col-12">
            <button type="submit" class="btn btn-primary">💾 حفظ الدكتور</button>
            <a asp-action="Index" class="btn btn-secondary">⬅️ الرجوع للقائمة</a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}