@model IEnumerable<Hospital_Project.Models.Doctor>

@{
    ViewData["Title"] = "قائمة الدكاترة";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>👨‍⚕️ قائمة الدكاترة</h2>
        <a asp-action="Create" class="btn btn-success">➕ إضافة دكتور جديد</a>
    </div>

    @if (Model.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>الاسم</th>
                        <th>التخصص</th>
                        <th>تاريخ الميلاد</th>
                        <th>الجنس</th>
                        <th>الهاتف</th>
                        <th>البريد</th>
                        <th>العنوان</th>
                        <th>الإجراءات</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.DoctorName</td>
                            <td>@item.Specialization</td>
                            <td>@item.DateOfBirth.ToString("yyyy-MM-dd")</td>
                            <td>@(item.Gender == 'M' ? "ذكر" : item.Gender == 'F' ? "أنثى" : "غير محدد")</td>
                            <td>@item.Phone</td>
                            <td>@item.Email</td>
                            <td>@item.Address</td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">✏️ تعديل</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger ms-1">🗑️ حذف</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info text-center">
            💤 مفيش دكاترة مسجلين. <a asp-action="Create">أضف أول دكتور!</a>
        </div>
    }
</div>